<!-- This page shows details for an individual place -->
<div class='booyah-box col-xs-10 col-xs-offset-1'>
  <h1><%= @place.name %></h1>
  <i><%= @place.address %></i>
  <br/><br/>
  <p><%= @place.description %></p>
  <div class='pull-right'>
    <% if current_user && current_user == @place.user %>
      <!--Allow user to edit place, if user is the same as the one who created record-->
      <%= link_to 'Edit', edit_place_path(@place), class: 'btn btn-primary' %>
      <!--Allow user who created place to delete it-->
      <%= link_to 'Destroy', place_path(@place), method: :delete, data: {confirm: 'Are you sure you want to delete this zone, human scum?'}, class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>